<div class="mt-4">

    <div class="row">
        {{!-- Form create new course --}}
        <form method="POST" action='/courses/{{course._id}}?_method=PUT'>
            <legend>Chỉnh sửa khóa học</legend>
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Nhập tên khóa học">
            </div>
            <div class="form-group">
                <label for="desription" >Mô tả khóa học</label>
                <input type="text" class="form-control" value="{{course.desription}}" id="desription" name="desription" placeholder="Nhập mô tả khóa học">
            </div>
            <div class="form-group">
                <label for="image">Chọn ảnh</label>
                <input type="text" class="form-control" value="{{course.image}}" id="image" name="image" placeholder="Chọn ảnh">
            </div>
            
            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>

    </div>

</div>